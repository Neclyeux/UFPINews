<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_news_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Titulo da noticia"/>

        <ImageView
            android:id="@+id/news_imageview_detail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/title_news_detail"
            android:src="@drawable/logo_ufpi"/>

        <TextView
            android:id="@+id/news_description_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:text="Descricao da noticia"
            android:textSize="15sp"
            android:layout_below="@id/news_imageview_detail"/>
    </LinearLayout>
</ScrollView>